# Configurazione Progetto NLP

# Percorsi
DATA_DIR=./data
MODELS_DIR=./models

# Preprocessing
DEFAULT_LANGUAGE=italian
USE_LEMMATIZATION=true
REMOVE_STOPWORDS=true

# Modellazione
TEST_SIZE=0.2
RANDOM_STATE=42
MAX_FEATURES=1000

# Altro
DEBUG=false

# --- Configurazione Database PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres

# --- Servizi ---
# URL per il servizio AI (usato dalla webapp)
AI_SERVICE_URL=http://localhost:8000
# URL per il crawler (usato dal servizio AI)
CRAWLER_URL=http://localhost:8001

# URL per Ollama (usato dal servizio AI come fallback, se GEMINI_API_KEY non Ã¨ impostata)
# Se usi Ollama installato localmente sul tuo sistema (non come container Docker),
# usa http://host.docker.internal:11434 su Docker Desktop (macOS/Windows) o
# l'indirizzo IP del tuo host su Linux.
OLLAMA_URL=http://ollama:11434

# --- API Keys ---
# Chiave API per Google Gemini (necessaria per il RAG ibrido e dashboarding)
# Ottenila da Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Ngrok
NGROK_AUTHTOKEN=your_ngrok_token_here
