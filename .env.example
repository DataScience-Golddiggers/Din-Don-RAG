# Configurazione Progetto NLP

# Percorsi
DATA_DIR=./data
MODELS_DIR=./models

# Preprocessing
DEFAULT_LANGUAGE=italian
USE_LEMMATIZATION=true
REMOVE_STOPWORDS=true

# Modellazione
TEST_SIZE=0.2
RANDOM_STATE=42
MAX_FEATURES=1000

# Altro
DEBUG=false

# Servizi
# URL per il servizio AI (usato dalla webapp)
AI_SERVICE_URL=http://localhost:8000
# URL per il crawler (usato dal servizio AI)
CRAWLER_URL=http://localhost:8001
# URL per Ollama (usato dal servizio AI)
# Se usi Ollama in locale (non docker), usa http://host.docker.internal:11434 su Mac/Windows o l'IP host su Linux
OLLAMA_URL=http://ollama:11434

# Ngrok
NGROK_AUTHTOKEN=your_ngrok_token_here
